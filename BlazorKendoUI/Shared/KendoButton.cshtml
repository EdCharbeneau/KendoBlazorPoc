@using BlazorKendoUI
@using BlazorKendoUI.Models;
@using Microsoft.AspNetCore.Blazor.Components
@using Microsoft.JSInterop;
@implements IDisposable

<button ref="element">@ChildContent</button>

@functions {
    private bool shouldRender = true;

    ElementRef element;

    [Parameter]
    private RenderFragment ChildContent { get; set; }

    [Parameter]
    Action OnButtonClick { get; set; }
    [JSInvokable]
    public void ButtonClick() => OnButtonClick.Invoke();


    protected override void OnAfterRender()
    {
        if (shouldRender)
        {
            KendoUIInterop.Init(element, GetModel(), this);

            shouldRender = false;
        }
    }

    public void Dispose()
    {
        KendoUIInterop.Dispose(element);
    }

    private ButtonModel GetModel()
    {
        return new ButtonModel();
    }
}
