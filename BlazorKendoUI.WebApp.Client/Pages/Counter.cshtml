@page "/counter"
@using BlazorKendoUI.Models

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Increment</button>

<KendoButton OnButtonClick="@Increment1">1</KendoButton>
<KendoButton OnButtonClick="@Increment10">10</KendoButton>

<KendoNativeButton Class="active">2-3</KendoNativeButton>

@functions {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }

    void Increment1()
    {
        currentCount += 1;
        StateHasChanged();
    }

    void Increment10()
    {
        currentCount += 10;
        StateHasChanged();
    }

    protected override void OnInit()
    {
        base.OnInit();
    }

    void DecrementCount()
    {
        // Doesn't trigger refresh of currentCount value?

        currentCount--;
    }
}
