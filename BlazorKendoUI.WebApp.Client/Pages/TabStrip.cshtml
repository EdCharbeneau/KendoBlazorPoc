@page "/nativetabstrip"
@using BlazorNativeKendoUI.Components.TabStrip

<h1>Kendo UI Native Tab Strip</h1>

<KendoNativeTabStrip Selected="@SelectedTab" OnSelected="@OnTabSelected">
    <Tab Title="Sofia">
        <Weather City="Sofia"
                 TempC="23"
                 Forecast="ForecastType.Sunny">
        </Weather>
    </Tab>
    <Tab Title="London">
        <Weather City="London"
                 TempC="21"
                 Forecast="ForecastType.Cloudy">
        </Weather>
    </Tab>
    <Tab Title="Paris">
        <Weather City="Paris"
                 TempC="17"
                 Forecast="ForecastType.Rainy">
        </Weather>
    </Tab>
</KendoNativeTabStrip>

<p>Change value to select at runtime</p>
<div><span>Tab Selected: </span><input type="number" bind="@SelectedTab" /></div>

@functions {

    int SelectedTab;

    void OnTabSelected(int tabIndex)
    {
        SelectedTab = tabIndex;
        StateHasChanged();
    }

    protected override void OnInit()
    {
        // Tabs aren't initialzied yet, this will fail
        SelectedTab = 2;
        StateHasChanged();
    }
}